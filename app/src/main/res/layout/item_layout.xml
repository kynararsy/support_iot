<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@id/ivTime"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txtCalendar"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/txtCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="22/06/2021"
                app:layout_constraintBottom_toBottomOf="@id/ivDate"
                app:layout_constraintLeft_toRightOf="@id/ivDate"
                app:layout_constraintTop_toTopOf="@id/ivDate" />

            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@id/ivDetak"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@id/ivDate"
                app:layout_constraintRight_toRightOf="@id/ivDate"
                app:layout_constraintTop_toBottomOf="@id/ivDate"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="10:00 WIB"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/ivTime"
                app:layout_constraintLeft_toRightOf="@id/ivTime"
                app:layout_constraintTop_toTopOf="@id/ivTime" />

            <ImageView
                android:id="@+id/ivDetak"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@id/ivKbb"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@id/ivTime"
                app:layout_constraintRight_toRightOf="@id/ivTime"
                app:layout_constraintTop_toBottomOf="@id/ivTime"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/txtDetak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="69 PPM"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/ivDetak"
                app:layout_constraintLeft_toRightOf="@id/ivDetak"
                app:layout_constraintTop_toTopOf="@id/ivDetak" />

            <ImageView
                android:id="@+id/ivKbb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@id/ivDebu"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@id/ivDetak"
                app:layout_constraintRight_toRightOf="@id/ivDetak"
                app:layout_constraintTop_toBottomOf="@id/ivDetak"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/txtKelembaban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="10:00 WIB"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/ivKbb"
                app:layout_constraintLeft_toRightOf="@id/ivKbb"
                app:layout_constraintTop_toTopOf="@id/ivKbb" />

            <ImageView
                android:id="@+id/ivDebu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@id/ivKbb"
                app:layout_constraintRight_toRightOf="@id/ivKbb"
                app:layout_constraintTop_toBottomOf="@id/ivKbb"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/txtDebu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="10:00 WIB"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/ivDebu"
                app:layout_constraintLeft_toRightOf="@id/ivDebu"
                app:layout_constraintTop_toTopOf="@id/ivDebu" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>